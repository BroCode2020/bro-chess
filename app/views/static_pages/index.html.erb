<div class="booyah-box col-4">
  <h1>Join a Game</h1>

  <% if current_user %>
    <h2>
      Available Games:
    </h2>
    <ul>
      <% @game.each do |game| %>
        <% if game.black_player_id.nil? && game.white_player_id %>
          <li>Waiting for
            <b>black</b>
            to join...
            <%= link_to 'Join this game', join_as_black_game_path(game), method: :put %></li>
          <% elsif game.black_player_id && game.white_player_id.nil? %>
            <li>Waiting for
              <b>white</b>
              to join...
              <%= link_to 'Join this game', join_as_white_game_path(game), method: :put %></li>

          <% end %>
        <% end %>
      </ul>
    <% else %>
      <h2><%= link_to 'Log in to see available games!', new_user_session_path %></h2>
    <% end %>
  </div>

  <br />
<div class="booyah-box col-4">
  <h1>Create Game</h1>
    <div class="row container">
      <%= simple_form_for @game.create do |f| %>
        <%= f.input :white_player_id, :as => :hidden, :input_html => { :value => current_user.id } %>
        <%= f.submit "White Player", class: 'btn btn-primary' %>
      <% end %>
      &nbsp; &nbsp; &nbsp;
      <%= simple_form_for @game.create do |f| %>
        <%= f.input :black_player_id, :as => :hidden, :input_html => { :value => current_user.id } %>
        <%= f.submit "Black Player", class: 'btn btn-primary' %>
      <% end %>
    </div>
</div>
